<config>
    <modules>
        <Infortis_UltraSlideshow>
            <version>1.0.0</version>
        </Infortis_UltraSlideshow>
    </modules>
    <frontend>
        <layout>
            <updates>
                <ultraslideshow>
                    <file>infortis_ultraslideshow.xml</file>
                </ultraslideshow>
            </updates>
        </layout>
    </frontend>
    <global>
        <models>
            <ultraslideshow>
                <class>Infortis_UltraSlideshow_Model</class>
            </ultraslideshow>
        </models>
        <blocks>
            <ultraslideshow>
                <class>Infortis_UltraSlideshow_Block</class>
            </ultraslideshow>
        </blocks>
        <helpers>
            <ultraslideshow>
                <class>Infortis_UltraSlideshow_Helper</class>
            </ultraslideshow>
        </helpers>
    </global>
	<default>
		<ultraslideshow>
			<general>
				<enabled>1</enabled>
				<blocks>block_slide1,block_slide2,block_slide3</blocks>
				<directory>wysiwyg/infortis</directory>
				<files></files>
				<fx>slide</fx>
				<easing>easeInOutCubic</easing>
				<timeout>10000</timeout>
				<speed>600</speed>
				<pause>1</pause>
				<loop>1</loop>
			</general>
		</ultraslideshow>
	</default>
</config>