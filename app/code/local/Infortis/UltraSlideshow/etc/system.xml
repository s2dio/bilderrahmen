<?xml version="1.0"?>
<config>
    <sections>
        <ultraslideshow translate="label">
			<label>Slideshow</label>
			<tab>ultimo</tab>
			<frontend_type>text</frontend_type>
			<sort_order>100</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
            <groups>
				<general translate="label">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enable Slideshow</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
						<blocks translate="label">
                            <label>Displayed Slides</label>
							<comment>Comma separated list of static block identifiers. These static blocks will be displayed as slides.</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </blocks>
                        <link1 translate="label">
                            <label>Block Link 1</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>21</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </link1>
                        <link2 translate="label">
                            <label>Block Link 2</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>22</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </link2>
                        <link3 translate="label">
                            <label>Block Link 3</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>23</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </link3>
                        
                        
                        
						<directory translate="label">
                            <label>Images Directory</label>
							<comment>
								<![CDATA[if you want to display simple images (without links or any additional HTML) in the slideshow, specify a path to the directory containing those images. Path is relative to <strong>media</strong> directory. No leading or trailing slashes.]]>
							</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </directory>
						<files translate="label">
                            <label>Displayed Images</label>
							<comment>
								<![CDATA[Comma separated list of images (located in the directory specified in <strong>Images Directory</strong> field) which you want to display in the slideshow. E.g.: slide1.png,slide2.jpg,some_image.jpg]]>
							</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </files>
						

						<fx translate="label">
							<label>Transition Effect Animation</label>
                            <frontend_type>select</frontend_type>
							<source_model>ultraslideshow/source_fx</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</fx>
						<easing translate="label">
							<label>Easing Method</label>
							<comment>The type of easing applied to the transition animation.</comment>
                            <frontend_type>select</frontend_type>
							<source_model>ultraslideshow/source_easing</source_model>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</easing>
						
						<timeout translate="label">
                            <label>Timeout</label>
							<comment>Time (in milliseconds) between slide transitions. "0" to disable automatic transition. Note that 1000 miliseconds = 1 second.</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </timeout>
						<speed translate="label">
                            <label>Transition Speed</label>
							<comment>Time (in milliseconds) of slide transition animation.</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>80</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </speed>
						<pause translate="label">
							<label>Pause on Hover</label>
							<comment>If enabled, when the slideshow is mouseovered then the autoplay functionality will pause.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <sort_order>90</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</pause>
						<loop translate="label">
							<label>Loop</label>
							<comment>If enabled, animation will loop.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</loop>
					</fields>
				</general>
            </groups>
        </ultraslideshow>
    </sections>
</config> 