<config>
    <default>
        <germansetup>
            <pages>
                <default>
                    <germansetup_404>
                        <execute>1</execute>
                        <title>Seite nicht gefunden</title>
                        <identifier>no-route</identifier>
                        <root_template>one_column</root_template>
                        <text>app/locale/de_DE/template/germansetup/page/404.html</text>
                    </germansetup_404>

                    <germansetup_imprint>
                        <execute>1</execute>
                        <title>Impressum</title>
                        <identifier>impressum</identifier>
                        <root_template>one_column</root_template>
                        <text>app/locale/de_DE/template/germansetup/page/impressum.html</text>
                    </germansetup_imprint>

                    <germansetup_payment>
                        <execute>1</execute>
                        <title>Zahlungsarten</title>
                        <identifier>zahlung</identifier>
                        <root_template>one_column</root_template>
                        <text>app/locale/de_DE/template/germansetup/page/zahlung.html</text>
                    </germansetup_payment>

                    <germansetup_privacy>
                        <execute>1</execute>
                        <title>Datenschutz</title>
                        <identifier>datenschutz</identifier>
                        <root_template>one_column</root_template>
                        <text>app/locale/de_DE/template/germansetup/page/datenschutz.html</text>
                    </germansetup_privacy>

                    <germansetup_shipping>
                        <execute>1</execute>
                        <title>Lieferung</title>
                        <identifier>lieferung</identifier>
                        <root_template>one_column</root_template>
                        <text>app/locale/de_DE/template/germansetup/page/lieferung.html</text>
                    </germansetup_shipping>

                    <germansetup_order>
                        <execute>1</execute>
                        <title>Bestellvorgang</title>
                        <identifier>bestellung</identifier>
                        <root_template>one_column</root_template>
                        <text>app/locale/de_DE/template/germansetup/page/bestellung.html</text>
                    </germansetup_order>

                    <germansetup_business_terms>
                        <execute>1</execute>
                        <title>AGB</title>
                        <identifier>agb</identifier>
                        <root_template>one_column</root_template>
                        <text>app/locale/de_DE/template/germansetup/page/agb.html</text>
                    </germansetup_business_terms>

                    <germansetup_revocation>
                        <execute>1</execute>
                        <title>Widerrufsbelehrung</title>
                        <identifier>widerruf</identifier>
                        <root_template>one_column</root_template>
                        <text>app/locale/de_DE/template/germansetup/page/widerruf.html</text>
                    </germansetup_revocation>
                </default>
            </pages>

            <blocks>
                <default>
                    <gs_business_terms>
                        <execute>1</execute>
                        <title>AGB</title>
                        <identifier>gs_business_terms</identifier>
                        <text>app/locale/de_DE/template/germansetup/block/agb.html</text>
                    </gs_business_terms>

                    <gs_revocation>
                        <execute>1</execute>
                        <title>Widerrufsbelehrung</title>
                        <identifier>gs_revocation</identifier>
                        <text>app/locale/de_DE/template/germansetup/block/widerruf.html</text>
                    </gs_revocation>

                    <gs_footerlinks>
                        <execute>1</execute>
                        <title>Footer Links</title>
                        <identifier>footer_links</identifier>
                    </gs_footerlinks>
                </default>
            </blocks>

            <footer_links>
                <default>
	                <agreement>
	                    <title>AGB</title>
	                    <target>agb</target>
	                </agreement>
	                <revocation>
	                    <title>Widerruf</title>
	                    <target>widerruf</target>
	                </revocation>
	                <shipping>
	                    <title>Lieferung</title>
	                    <target>lieferung</target>
	                </shipping>
	                <payment>
	                    <title>Zahlungsarten</title>
	                    <target>zahlung</target>
	                </payment>
	                <privacy>
	                    <title>Datenschutz</title>
	                    <target>datenschutz</target>
	                </privacy>
	                <order>
	                    <title>Bestellvorgang</title>
	                    <target>bestellung</target>
	                </order>
	                <imprint>
	                    <title>Impressum</title>
	                    <target>impressum</target>
	                </imprint>
                </default>
            </footer_links>
        </germansetup>
    </default>
</config>
